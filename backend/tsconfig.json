{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./build",                              // Output directory for compiled JS
    "rootDir": "./src",                               // Directory for TypeScript source files
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"                        // Ensure TypeScript uses Node.js module resolution
  },
  "include": ["src"],                                 // Include the src directory for compilation
  "exclude": ["node_modules"]                         // Exclude node_modules from compilation
}
